                </a>
            }
            @if (Session["UserID"] != null && Session["Role"]?.ToString() == "Admin")
            {
                <a class="navbar-brand d-flex align-items-center gap-2" href="@Url.Action("Dashboard", "Admin")">
                    <img src="~/Content/Image/Videos/LOGO.jpg" alt="Logo" class="img-fluid" style="max-height: 40px; width: auto;" />
                    <span class="fw-bold text-primary-emphasis">Prayer Tracker</span>
