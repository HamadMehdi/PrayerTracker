@model IEnumerable<PrayerTracker1.Models.Content>

<div class="container-fluid mt-4">
    <div class="card shadow-lg w-100">
        <div class="card-header bg-primary text-white text-start py-3">
            <h2 class="mb-0"><i class="fas fa-list me-2"></i> Content List</h2>
        </div>
        <div class="card-body p-4">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (Session["User"] != null && Session["Role"]?.ToString() == "Admin")
            {
                <div class="d-flex justify-content-end mb-4">
                    <a href="@Url.Action("Add", "Admin")" class="btn btn-success px-4 py-2">
                        <i class="fas fa-plus me-2"></i> Add New Content
                    </a>
                </div>
            }


            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead  class="bg-primary text-white">
                        <tr >
                            <th class="text-center">Title</th>
                            <th class="text-center">Category</th>
                            <th class="text-center">Type</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Created At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Title</td>
                                <td class="text-center">@item.Category</td>
                                <td class="text-center">@item.ContentType</td>
                                <td class="text-center">@item.Description</td>
                                <td class="text-center">@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    @if (item.ContentType == "Video")
                                    {
                                        <button class="btn btn-sm btn-outline-info" onclick="playVideo('@Url.Content(item.ContentURL)')" data-bs-toggle="tooltip" title="View Video">
                                            <i class="fas fa-video"></i>View
                                        </button>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-file-alt"></i> Text
                                        </a>
                                        
                                    }
                                    @if (Session["UserID"] != null && Session["Role"]?.ToString() == "Admin")
                                    {
                                        <a href="@Url.Action("DeleteContent", "Admin", new { id =item.ID })" class="btn btn-outline-warning btn-sm " onclick="return confirm('Are you sure you want to delete this content?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                        <a href="@Url.Action("ContentEdit", new { id =item.ID })" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-edit"></i> Update
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"><i class="fas fa-video me-2"></i> Video Preview</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" onclick="stopVideo()"></button>
            </div>
            <div class="modal-body text-center">
                <div id="loadingSpinner" class="d-none">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading video...</p>
                </div>
                <video id="videoPlayer" width="100%" controls class="d-none">
                    <source id="videoSource" src="" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <button class="btn btn-dark mt-3" onclick="toggleFullScreen()">
                    <i class="fas fa-expand me-2"></i> Full Screen
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function playVideo(videoUrl) {
        if (!videoUrl) return Swal.fire("Error!", "Video URL is missing!", "error");

        let videoPlayer = document.querySelector("#videoPlayer"),
            loadingSpinner = document.querySelector("#loadingSpinner"),
            videoSource = document.querySelector("#videoSource");

        loadingSpinner.classList.toggle("d-none", false);
        videoPlayer.classList.toggle("d-none", true);

        videoSource.src = videoUrl;
        videoPlayer.load();

        videoPlayer.onloadeddata = () => loadingSpinner.classList.add("d-none"),
            videoPlayer.classList.remove("d-none");

        new bootstrap.Modal("#videoModal").show();
    }

    function stopVideo() {
        let video = document.querySelector("#videoPlayer");
        video.pause();
        video.currentTime = 0;
    }

    function toggleFullScreen() {
        document.querySelector("#videoPlayer")?.requestFullscreen?.();
    }

    document.addEventListener("DOMContentLoaded", () =>
        document.querySelectorAll("[data-bs-toggle='tooltip']")
            .forEach(el => new bootstrap.Tooltip(el))
    );
</script>