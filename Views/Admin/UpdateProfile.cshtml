@model PrayerTracker1.Models.UserVM.UserVM

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title text-center mb-0">Edit Profile</h2>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.User.ID)


                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label for="FirstName" class="form-label fw-bold">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-user text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.UserProfile.FirstName, new { @class = "form-control", required = "required", placeholder = "Enter your First Name" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserProfile.FirstName, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label for="LastName" class="form-label fw-bold">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-user text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.UserProfile.LastName, new { @class = "form-control", required = "required", placeholder = "Enter your Last Name" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserProfile.LastName, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label for="Email" class="form-label fw-bold">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.UserProfile.Email, new { @class = "form-control", type = "email", required = "required", placeholder = "Enter your email" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserProfile.Email, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label for="ContactNo" class="form-label fw-bold">Phone No</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-phone text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.UserProfile.ContactNo, new { @class = "form-control", required = "required", placeholder = "Enter Phone No" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserProfile.ContactNo, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label for="Address" class="form-label fw-bold">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.UserProfile.Address, new { @class = "form-control", required = "required", placeholder = "Enter your Address" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserProfile.Address, "", new { @class = "text-danger small" })
                            </div>

                            @if (Session["UserID"] != null)
                            {
                                <div class="col-md-6">
                                    <label for="Status" class="form-label fw-bold">Status</label>

                                    @if (Session["Role"]?.ToString() == "Admin")
                                    {
                                        @Html.DropDownListFor(model => model.UserProfile.status,
                                             new List<SelectListItem>
                                             {
                                                new SelectListItem { Text = "Active", Value = "true" },
                                                new SelectListItem { Text = "Inactive", Value = "false" }
                                             },
                                             new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.UserProfile.status, "", new { @class = "text-danger small" })
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" value="@(Model.UserProfile.status ? "Active" : "Inactive")" readonly />
                                    }
                                </div>
                            }

                        </div>


                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label for="Username" class="form-label fw-bold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-user-circle text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.User.UserName, new { @class = "form-control", required = "required", placeholder = "Enter your Username", @readonly = "readonly" })
                                </div>
                                @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label for="Password" class="form-label fw-bold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-lock text-primary"></i></span>
                                    @Html.TextBoxFor(model => model.User.Password, new { @class = "form-control", required = "required", type = "password", placeholder = "Enter Password", id = "password" })
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>

                            </div>
                        </div>


                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-user-edit me-2"></i> Update Profile
                            </button>
                            @if (Session["Role"]?.ToString() == "Admin")
                            {
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i> Cancel
                                </a>
                            }
                            @if (Session["Role"]?.ToString() == "User")
                            {
                                <a href="@Url.Action("UserDashboard", "User")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i> Cancel
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(id = "password") {
        let field = document.getElementById(id);
        field.type = field.type === "password" ? "text" : "password";
    }

</script>